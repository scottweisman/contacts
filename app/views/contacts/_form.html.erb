<%= nested_form_for(@contact, :html => {:class => "new_contact_form"}) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>  
  
  <div class="row">
    <div class="two mobile-one columns">
      <%= f.label :first_name, :class => "right" %>
    </div>
    <div class="ten mobile-three columns">
      <%= f.text_field :first_name, :class => "five" %>
    </div>
  </div>
  
  <div class="group">
    <%= f.label :last_name %>
      <%= f.text_field :last_name %>
  </div>
  <div class="group">
    <%= f.label :company %>
    <%= f.text_field :company %>
  </div>
  <div class="group">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="group">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div class="group">
    <%= f.label :street_address %>
    <%= f.text_field :street_address %>
  </div>
  <div class="group">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="group">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div class="group">
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>
  <div class="group">
    <%= f.label :website %>
    <%= f.text_field :website %>
  </div>
  <div class="group">
    <%= f.label :facebook %>
    <%= f.text_field :facebook %>
  </div>
  <div class="group">
    <%= f.label :twitter %>
    <%= f.text_field :twitter %>
  </div>
  <div class="group">
    <%= f.fields_for :notes do |note| %>
      <div class="note_field">
        <%= note.label :content, "Note" %>
        <%= note.text_field :content %>
        <%= note.link_to_remove "Remove" %>
      </div>
    <% end %>
    <%= f.link_to_add "Add note", :notes %>    
  </div>

  
  <div class="actions">
    <%= f.submit "Add contact", :class => 'btn' %>
  </div>
<% end %>


<h4 style="display:inline">
  <%= @contact.first_name %> <%= @contact.last_name %>
</h4>
<%= link_to 'Edit contact', edit_contact_path(@contact), :class => "pull-right" %>

<p>
  <%= @contact.company %><br />
  <%= mail_to @contact.email %><br />
  <%= @contact.phone %>
</p>

<p>
  <%= @contact.street_address %><br />
  <%= @contact.city %>
  <%= @contact.state %>
  <%= @contact.zip %>
</p>

<p>
  <b>Website:</b>
  <%= link_to "#{@contact.website}", "http://#{@contact.website}" %>
</p>

<p>
  <b>Facebook:</b>
  
  <%= link_to "#{@contact.facebook}", "http://www.facebook.com/#{@contact.facebook}" %>
</p>

<p>
  <b>Twitter:</b>
  <%= link_to "#{@contact.twitter}", "http://twitter.com/#{@contact.twitter}" %>
</p>

<% if @contact.notes.any? %>
  <div>
    <b>Notes:</b>
      <ul>
        <% @contact.notes.each do |note| %>
          <li><%= note.content %> <%= note.created_at.strftime("(%b %e)") %></li>
        <% end %>
      </ul>
    </div>
<% end %>


<%= link_to "Add note", "#", "data-reveal-id" => "myModal" %>

<div id="myModal" class="reveal-modal">
<a class="close-reveal-modal">Ã—</a>  
  <p>Add note for<br><%= @contact.first_name %> <%= @contact.last_name %></p>
<%= render 'notes/form' %>
</div>



<h2 style="display:inline">
  <%= @contact.first_name %> <%= @contact.last_name %>
</h2>
<%= link_to 'Edit contact', edit_contact_path(@contact), :class => "pull-right" %>

<p>
  <% if @contact.title.present? %>
    <%= @contact.title %> at <%= @contact.company %><br />
  <% else %>
    <%= @contact.company %><br />
  <% end %>
  <%= mail_to @contact.email %><br />
  <% if @contact.personal_email %>
    <%= mail_to @contact.personal_email %><br />
  <% end %>
  <%= @contact.phone %>
</p>

<% if @contact.website.present? %>
  <p>
    <b>Website:</b>
    <%= link_to "#{@contact.website}", "http://#{@contact.website}" %>
  </p>
<% end %>

<% if @contact.linkedin.present? %>
  <p>
    <b>LinkedIn:</b>

    <%= link_to "#{@contact.linkedin}", "http://www.linkedin.com/in/#{@contact.linkedin}" %>
  </p>
<% end %>

<% if @contact.twitter.present? %>
  <p>
    <b>Twitter:</b>
    <%= link_to "#{@contact.twitter}", "http://twitter.com/#{@contact.twitter}" %>
  </p>
<% end %>

<% if @contact.street_address.present? %>
  <div class="subheader_container">
    <h4 class="subheader_text">Address</h4>
  </div>
  <p>
    <%= @contact.street_address %><br />
    <%= @contact.city %>
    <%= @contact.state %>
    <%= @contact.zip %>
  </p>
<% end %>

<% if @contact.notes.any? %>
  <div>
    <div class="subheader_container">
      <h4 class="subheader_text">Notes</h4>
    </div>
        <ul class="notes">
          <% @contact.notes.each do |note| %>
            <%= render 'notes/note', :note => note %>
          <% end %>
        </ul>
  </div>
<% end %>

<%= render 'notes/form' %>

<% if @contact.tags.any? %>
  <div>
    <div class="subheader_container">
      <h4 class="subheader_text">Tags</h4>
    </div>
        <ul class="notes">
          <% @contact.tags.each do |tag| %>
            <li id="tag_<%= tag.id %>">
              <%= link_to image_tag("iconmonstr-trash-can-15-icon.png", :class => 'trash-can'), tag_path(tag), method: :delete, remote: true %>
              <%= link_to tag.name, tag_path(tag) %> <%= tag.created_at.strftime("(%b %e)") %>
            </li>
          <% end %>
        </ul>
  </div>
<% end %>

<%= render 'tags/form' %>



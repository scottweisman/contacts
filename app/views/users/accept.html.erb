<h1>Sign Up</h1>


  <%= form_for @user, :url => accept_invitation_url do |f| %>

    <% if @user.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <br>
    <%= hidden_field_tag :invitation_token, @invitation.token %>

  
    <div class="input">
      <%= f.text_field :full_name, :placeholder => 'Full Name', :value => nil %>
    </div>
    <div class="input">
      <%= f.password_field :password, :placeholder => 'Password' %>
    </div>
    <br>
      <%= f.submit "Sign up" %>
  <% end %>
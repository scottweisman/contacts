<h3>Hi <%= @invitation.recipient_first_name %>!<br>Enter a new password to create your account.</h3>


  <%= form_for @user, :url => accept_invitation_url do |f| %>

    <% if @user.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <%= hidden_field_tag :invitation_token, @invitation.token %>

    <div class="input">
      <%= f.label :password, "Password" %>
      <%= f.password_field :password, :placeholder => 'secret' %>
    </div>
    <br>
      <%= f.submit "Sign up" %>
  <% end %>